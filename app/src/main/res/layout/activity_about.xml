<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.user.kk.activity.AboutActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/back_arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kk_title_back_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kk_aboutActivity_centerhelp"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        />

</LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/aboutActivity_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@android:color/holo_red_light"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
        android:background="@color/coloraboutActivity"
        >
    </android.support.design.widget.TabLayout>
<android.support.v4.view.ViewPager
    android:id="@+id/aboutActivity_vp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v4.view.ViewPager>



</LinearLayout>

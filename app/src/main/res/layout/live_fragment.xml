<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:add="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colortab"
        >

        <ImageView
            android:id="@+id/live_seek_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@mipmap/kk_group_search_normal"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/live_tb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabMaxWidth="150dp"
            add:tabTextAppearance="@style/TextAppearance.AppCompat.Large"

            />
        <ImageView
            android:id="@+id/live_right_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@mipmap/sssss"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/live_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablayout"

        />

</LinearLayout>

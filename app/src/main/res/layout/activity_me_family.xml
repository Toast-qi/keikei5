<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.kk.activity.MeFamilyActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_mefamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kk_title_back_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
         android:text="@string/kk_meFamily_family"
        />
    <TextView
        android:id="@+id/foundfamily_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="120dp"
        android:textSize="12dp"
        android:textColor="@color/colorBrown"
        android:text="@string/kk_meFamily_foundFamily"
        />


</LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="52dp"
      android:background="@color/colorGray"
      />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/me_family_RecycylerView"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>

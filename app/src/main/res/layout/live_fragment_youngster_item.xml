<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_margin="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item"
            android:scaleType="fitXY"
            android:id="@+id/youngter_item_iv" />
    </RelativeLayout>
        <TextView
            android:id="@+id/youngter_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tyh"
            android:layout_below="@id/youngter_item_iv"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/youngter_item_tv"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/youngter_item_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/youngter_item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ff"/>
        </LinearLayout>


</LinearLayout>

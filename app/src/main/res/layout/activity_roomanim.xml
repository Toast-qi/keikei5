<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.kk.activity.RoomanimActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/room_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kk_title_back_icon"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kk_roomanim_roomanim"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="110dp"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorShallowGray"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/room_gift_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kk_roomanim_giftanim"
            android:textSize="16sp"
            />

        <ToggleButton
            android:id="@+id/mToBtn1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:button="@drawable/drawable_switchbutton"
            android:checked="false"
            android:background="#ffffff"
            android:layout_marginLeft="200dp"
            />





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorShallowGray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kk_roomanim_flyanim"
            android:textSize="16sp"
            />

        <ToggleButton
            android:id="@+id/mToBtn2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:button="@drawable/drawable_switchbutton"
            android:checked="false"
            android:background="#ffffff"
            android:layout_marginLeft="200dp"
            />




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorShallowGray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kk_roomanim_enjoyanim"
            android:textSize="16sp"
            />

        <ToggleButton
            android:id="@+id/mToBtn3"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:button="@drawable/drawable_switchbutton"
            android:checked="false"
            android:background="#ffffff"
            android:layout_marginLeft="200dp"
            />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kk_roomanim_huayu"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

</LinearLayout>
